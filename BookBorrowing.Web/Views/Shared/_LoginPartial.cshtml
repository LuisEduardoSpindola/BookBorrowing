@using Microsoft.AspNetCore.Identity
@using BookBorrowing.Web.Areas.Identity.Data

@inject SignInManager<Library> SignInManager
@inject UserManager<Library> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <p id="manage" class="nav-link text-white" asp-area="Identity" title="Manage">Olá @UserManager.GetUserAsync(User).Result.Name!</p>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-light border-0">Sair</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white fw-light" id="register" asp-area="Identity" asp-page="/Account/Register">Criar Conta</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white fw-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
