@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="container">
    <br></br><br></br>
    <div class="justify-content-center row col-sm w-50 mx-auto">
        <div class="card-body bg-dark border border-primary ">
            <main>
                <div class="card-header text-center"><h2 class="fw-light">Login</h2></div>
                <br></br>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label text-dark">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label text-dark">Senha</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label text-white">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
                    </div>
                    <br></br>
                    <center>
                        <a id="forgot-password" class="btn btn-outline-warning p-25" asp-page="./ForgotPassword">Esqueci minha senha</a> | <a asp-page="./Register" class="btn btn-outline-primary p-25" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar-se</a> | <a id="resend-confirmation" class="btn btn-outline-info p-25" asp-page="./ResendEmailConfirmation">Confirmar Email</a>
                    </center>
                </form>
            </main>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
